
<% if product = Product.find_by(id: product_id) %>


<tr>
  <td>
    <%= image_tag product.image.tiny.url %>
  </td>
  <td>
    <h4><%= product.name %></h4>
    <br>
    <p><%= product.description %></p>
  </td>
  <td>
    <%=  quantity %>
  </td>
  <td>
    <%= humanized_money_with_symbol line_total %>
  </td>
</tr>
<% end %>
