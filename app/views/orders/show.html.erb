<section class="orders-show">

  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
  </header>

  <div class="order-summary jumbotron">
    <h4>Thank you for your order!</h4>
  </div>

  <div class="alert alert-secondary pb-2" role="alert">
    <h5><b>Your order email: </b> <%= @order.email %></h5>
  </div>


  <div class="panel panel-default items">
  <table class="table table-bordered">
    <thead>
      <tr>
        <th colspan="2">Product</th>
        <th>Quantity</th>
        <th>Price</th>
      </tr>
    </thead>
    <tbody>
      <% @line_items.each do |line_item| %>
        <%= render 'line_item', product_id: line_item[:product_id], 
        quantity: line_item.quantity, line_total: line_item.total_price %>
      <% end %>
    </tbody>
    <tfoot>
      <tr>
        <th colspan="3">
          TOTAL:
        </th>
        <th>
          <%= humanized_money_with_symbol  @line_items.sum(:total_price_cents) / 100.0 %>
        </th>
      </tr>
    </tfoot>
    </table>
  </div>
  
  <%= link_to "Continue Shopping", [:products], class: 'btn btn-lg btn-primary' %>

</section>
